    //! MD & TXT
    // #region MD & TXT
    "highlight.regexes": { // regex formatting like -, +, *
        // KEYWORDS (Purple): matches exact keywords or 'e:'
        "(?<!\\*\\s)\\b(core prompt|core task|example|examples|ie|role|BP|concept|types|steps|step|explanation|praxis|terminology|math|formula|restrictions|UC|pro/con|con)\\b:?|\\be:": {
            "filterFileRegex": ".*\\.(txt|md)$",
            "decorations": [{ "color": "#C792EA"}]
        },
        // -: matches dash bullets with headers ending in : or .
        "((?:^|\\n)\\s*-+\\s+)(?!(?:core prompt|core task|example|role|BP|concept|types|steps|step|explanation|praxis|terminology|math|formula|restrictions|UC|pro/con|con)\\b)((?:[^\\s.:]+\\s+){0,4}[^\\s.:]+)(?=[.:])": {
            "filterFileRegex": ".*\\.(txt|md)$",
            "decorations": [
                { "color": "#82AAFF", "fontWeight": "bold"},
                { "color": "#82AAFF"}
            ]
        },
        // +: matches plus bullets with headers ending in : or .
        "((?:^|\\n)\\s*\\++\\s+)(?!(?:core prompt|core task|example|role|BP|concept|types|steps|step|explanation|praxis|terminology|math|formula|restrictions|UC|pro/con|con)\\b)((?:[^\\s.:]+\\s+){0,4}[^\\s.:]+)(?=[.:])": {
            "filterFileRegex": ".*\\.(txt|md)$",
            "decorations": [
            { "color": "#6B8AB8" },
            { "color": "#6B8AB8" }
            ]
        },
        // *: special bullet. matches hierarchies and first expressions.
        "((?:^|\\n)\\s*\\*+\\s+)([A-Za-z_$\\[][^\\s.:]*)": {
            "filterFileRegex": ".*\\.(txt|md)$",
            "decorations": [
                { "color": "#7fdbca" },
                { "color": "#7fdbca" }
            ]
        },
        // LINKS AND PATHS (Light Blue)
        // Matches http, www, file paths like C:\ or /user/bin
        "(https?:\\/\\/[^\\s]+|www\\.[^\\s]+|[a-zA-Z]:\\\\[\\w\\\\\\-\\. ]+|(?:\\\\|\\/)(?:[\\w\\-\\. ]+(?:\\\\|\\/))+[\\w\\-\\. ]+)": {
            "filterFileRegex": ".*\\.(txt|md)$",
            "decorations": [{ "color": "#7274FF" }]
        },
    },
